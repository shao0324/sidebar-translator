{
  "manifest_version": 3,
  "name": "側邊欄翻譯 (Sidebar Translator)",
  "version": "1.01",
  "description": "在側邊欄開啟翻譯面板，可以選取文字進行翻譯。",
  "permissions": [
    "sidePanel",
    "contextMenus",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "options_page": "options.html",
  "action": {
    "default_title": "打開側邊欄翻譯",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "128": "icons/icon128.png"
  }
}
